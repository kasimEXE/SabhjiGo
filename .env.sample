# Firebase Configuration
# Get these values from your Firebase project settings
# Go to Firebase Console > Project Settings > General > Your apps
VITE_FIREBASE_API_KEY=your_firebase_api_key_here
VITE_FIREBASE_PROJECT_ID=your_firebase_project_id_here
VITE_FIREBASE_APP_ID=your_firebase_app_id_here
VITE_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id_here

# Environment Configuration
VITE_ENV=development

# Google Maps API Key (for future phases - currently unused)
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# SMS Provider Configuration (placeholder for future phases)
VITE_SMS_PROVIDER=firebase
VITE_SMS_API_KEY=your_sms_api_key_here

# Replit Configuration (automatically set in Replit environment)
# REPLIT_DOMAINS=your-repl-name.repl.co

# Firebase Emulator Configuration (for development/testing)
VITE_USE_EMULATOR=false
VITE_EMULATOR_HOST=localhost
VITE_FIRESTORE_EMULATOR_PORT=8080
VITE_AUTH_EMULATOR_PORT=9099

# App Configuration
VITE_APP_NAME=SabhjiGo
VITE_APP_VERSION=1.0.0
VITE_SUPPORT_EMAIL=support@sabhji.go

# PWA Configuration
VITE_PWA_CACHE_VERSION=v1
VITE_OFFLINE_ENABLED=true

# Security Configuration
VITE_RECAPTCHA_SITE_KEY=your_recaptcha_site_key_here

# Analytics (for future phases)
VITE_ANALYTICS_ID=your_analytics_id_here

# Feature Flags (for future phases)
VITE_ENABLE_MAPS=false
VITE_ENABLE_SMS=false
VITE_ENABLE_PUSH_NOTIFICATIONS=false
VITE_ENABLE_ANALYTICS=false

# Development Configuration
VITE_DEBUG_MODE=true
VITE_LOG_LEVEL=debug
